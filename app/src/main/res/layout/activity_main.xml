<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

  <TextView
      android:id="@+id/txtRotulo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="32sp"
      android:textColor="#007F00"
      android:text="@string/oktober" />

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="eventoClique1"
      android:text="@string/click_here"/>

  <Button
      android:id="@+id/btnDois"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/no_click_here"/>

  <Button
      android:id="@+id/btnTres"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/click_here_sometimes"/>

  <Button
      android:id="@+id/btnQuatro"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/maybe_click_here"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="tabelaClick"
      android:text="Sofre torcedor"/>


</LinearLayout>